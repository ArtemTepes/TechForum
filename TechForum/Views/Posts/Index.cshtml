@model IEnumerable<TechForum.Models.Items.Post>

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

<p>
    @Html.ActionLink("Create New", "CreatePost", "", new { @class = "btn btn-primary"})
</p>

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
        
            <td>
                @if (User.Identity.Name == item.UserName)
                {
                    @Html.ActionLink("Edit", "EditPost", new { id = item.PostId })

                   

                }|

                @if (User.Identity.Name == item.UserName)
                {
                     @Html.ActionLink("Delete", "DeletePost", new { id = item.PostId })
                }
                |
                @Html.ActionLink("View Post", "Index", "PostContent", new { id = item.PostId}, "")

            </td>
        </tr>
    }
    


</table>
<p>
    @Html.ActionLink("Back", "Index", "Item", "", new { @class = "btn btn-primary" })
</p>
